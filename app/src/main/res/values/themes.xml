<resources xmlns:tools="http://schemas.android.com/tools">
  <!-- Base application theme. -->
  <style name="Theme.WeatherApp" parent="Theme.MaterialComponents.Light">
    <!-- Primary brand color. -->
    <item name="colorPrimary">@color/purple_500</item>
    <item name="colorPrimaryVariant">@color/purple_700</item>
    <item name="colorOnPrimary">@color/white</item>
    <!-- Secondary brand color. -->
    <item name="colorSecondary">@color/teal_200</item>
    <item name="colorSecondaryVariant">@color/teal_700</item>
    <item name="colorOnSecondary">@color/black</item>
    <!-- Status bar color. -->
    <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
    <!-- Customize your theme here. -->
  </style>
  <style name="Theme.WeatherApp.SplashScreen" parent="Theme.SplashScreen">
    <item name="android:windowSplashScreenBackground">@color/design_default_color_primary_variant</item>
    <item name="android:windowSplashScreenAnimationDuration">1000</item>
    <item name="android:windowSplashScreenIconBackgroundColor">@color/white</item>
    <item name="android:windowSplashScreenBrandingImage">@drawable/ic_logo_round</item>
    <item name="postSplashScreenTheme">@style/Theme.WeatherApp</item>
  </style>
  <style name="Theme.WeatherApp.PBColor">
    <item name="colorAccent">@color/white</item>
  </style>
</resources>